@model List<FabAdmin.ViewModels.VacancyFolder.VacancyVM>;
@{
    ViewData["Title"] = "Create";
}


<div class="entert-form" style="padding-left: 50px;">

    <h1 style="margin-bottom: 2rem;" class="text-change-size">Create Vacancy</h1>


    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Vacancy">

        <div class="form-group  mt-2 mb-4 my-5">
            <div class="image-uploaddd">
                <label class="labelstyle" for="iconfile">
                  
                </label>

                <output style="display:flex;" id="output1"></output>
                <span style="color:gray;">.svg file, max-300kbt</span>
            </div>
        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[0].LangCode" name="Translates[0].LangCode" class="form-control addhoverinput" value="az" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].Position">Position-az</label>
            <textarea id="translates[0].Position" name="Translates[0].Position" class="form-control addhoverinput" required></textarea>
        </div>


        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].Desc">Desc-az</label>
            <textarea id="editor1" name="editor1" class="form-control addhoverinput" rows="10" cols="80" required></textarea>
        </div>

        @section Scripts{
            <script src="~/ckeditor/ckeditor.js"></script>

            <script>CKEDITOR.replace("editor1");    </script>
        }


        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[1].LangCode" name="Translates[1].LangCode" class="form-control addhoverinput" value="en" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].Position">Position-en</label>
            <textarea id="translates[1].Position" name="Translates[1].Position" class="form-control addhoverinput" required></textarea>
        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].Desc">Desc-en</label>
            <textarea id="translates[1].Desc" name="Translates[1].Desc" class="form-control addhoverinput" required></textarea>
        </div>




        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[2].LangCode" name="Translates[2].LangCode" class="form-control addhoverinput" value="ru" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].Position">Position-ru</label>
            <textarea id="translates[2].Position" name="Translates[2].Position" class="form-control addhoverinput" required></textarea>
        </div>


        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].Desc">Desc-ru</label>
            <textarea id="translates[2].Desc" name="Translates[2].Desc" class="form-control addhoverinput" required></textarea>
        </div>




        <button type="submit"  class="btn createbuttonn">Create</button>
    </form>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>


