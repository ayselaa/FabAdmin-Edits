@model List<FabAdmin.ViewModels.CorporateFolder.CorporateVM>;
@{
    ViewData["Title"] = "Create";
}


<div class="entert-form" style="padding-left: 50px;">

    <h1 style="margin-bottom: 2rem;" class="text-change-size">Create Corperative</h1>


    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Corporate">


        <div class="form-group  mt-2 mb-4 my-5">
            <div class="image-uploaddd">
                <label class="labelstyle addimages-lbl" for="iconfile">
                    <div class="file-input">
                    <h3 class="mt-1 addlogoclass" style="color: black;">
                            <span>+</span>Add Img
                            <input type="file" required id="ImageFile" name="ImageFile" class="form-control-file addhoverinput imagepreview1" onchange="CreateImgPre(this)" accept=".jpg,.png" />
                    </h3>
                    </div>
                </label>
                <p>
                    <img id="ImgPreviewbanner" style="width:50px; height:50px; border-style:none; border-color:white; margin-top:10px;" src="~/admin/assets/images/seabreezfotoicone.png" />
                </p>
                <span style="color:gray;">.svg file, max-300kbt</span>
            </div>
        </div>

        @*/////////////////////////////////////////////*@

        <div class="form-group  mt-2 mb-4 my-5">
            <div class="image-uploaddd">
                <label class="labelstyle  addimages-lbl" for="iconfile">
                    <div class="file-input">
                    <h3 class="mt-1 addlogoclass" style="color: black;">
                        <span>+</span>  Add FrontImage
                        <input type="file" required id="FrontImageFile" name="FrontImageFile" class="form-control-file addhoverinput imagepreview1" onchange="CreateImgPrewid(this)" accept=".jpg,.png" />
                    </h3>
                    </div>
                </label>

                <p>
                    <img id="ImgPreviewbannerwid" style="width:50px; height:50px; border-style:none; border-color:white; margin-top:10px;" src="~/admin/assets/images/seabreezfotoicone.png" />
                </p>
                <span style="color:gray;">.svg file, max-300kbt</span>
            </div>
        </div>

        @*//////////////////////////////////////////////////////////////*@

        <div class="form-group  mt-2 mb-4 my-5">
            <div class="image-uploaddd">
                <label class="labelstyle addimages-lbl" for="iconfile">
                    <div class="file-input">
                    <h3 class="mt-1 addlogoclass" style="color: black;">
                     <span>+</span>  Add BackgroundImage
                        <input type="file" required id="BackgroundImageFile" name="BackgroundImageFile" class="form-control-file addhoverinput imagepreview1" onchange="CreateImgPrewidd(this)" accept=".jpg,.png" />
                    </h3>
                    </div>
                </label>

                <p>
                    <img id="ImgPreviewbannerwidd" style="width:50px; height:50px; border-style:none; border-color:white;" src="~/admin/assets/images/seabreezfotoicone.png" />
                </p>
                <span style="color:gray;">.svg file, max-300kbt</span>
            </div>
        </div>

        @*//////////////////////////////////////////////////////////////////////*@
        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[0].LangCode" name="Translates[0].LangCode" class="form-control addhoverinput" value="az" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].Head">Head-az</label>
            <textarea id="translates[0].Header" name="Translates[0].Header" class="form-control addhoverinput" required></textarea>
        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[0].Desc">Desc-az</label>
            <textarea id="translates[0].Desc" name="Translates[0].Desc" class="form-control addhoverinput" required></textarea>
        </div>




        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[1].LangCode" name="Translates[1].LangCode" class="form-control addhoverinput" value="en" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].Header">Head-en</label>
            <textarea id="translates[1].Header" name="Translates[1].Header" class="form-control addhoverinput" required></textarea>
        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[1].Desc">Desc-en</label>
            <textarea id="translates[1].Desc" name="Translates[1].Desc" class="form-control addhoverinput" required></textarea>
        </div>




        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].LangCode">Language Code</label>
            <input type="text" style="width:5%;" readonly id="translates[2].LangCode" name="Translates[2].LangCode" class="form-control addhoverinput" value="ru" required>

        </div>

        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].Header">Head-ru</label>
            <textarea id="translates[2].Header" name="Translates[2].Header" class="form-control addhoverinput" required></textarea>
        </div>


        <div class="form-group  mt-2 mb-3">
            <label class="labelstyle" for="translates[2].Desc">Desc-ru</label>
            <textarea id="translates[2].Desc" name="Translates[2].Desc" class="form-control addhoverinput" required></textarea>
        </div>

        <button type="submit"  class="btn createbuttonn">Create</button>
    </form>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js" integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>


    @*////////////////////////////////////////////////// image preview unchange*@
    <script>
        function CreateImgPre(input) {
            if (input.files[0]) {
                var uploadimg = new FileReader();
                uploadimg.onload = function (displayimg) {
                    $("#ImgPreviewbanner").attr('src', displayimg.target.result);
                }
                uploadimg.readAsDataURL(input.files[0]);
            }
        }

        function CreateImgPrewid(input) {
            if (input.files[0]) {
                var uploadimg = new FileReader();
                uploadimg.onload = function (displayimg) {
                    $("#ImgPreviewbannerwid").attr('src', displayimg.target.result);
                }
                uploadimg.readAsDataURL(input.files[0]);
            }
        }



        function CreateImgPrewidd(input) {
            if (input.files[0]) {
                var uploadimg = new FileReader();
                uploadimg.onload = function (displayimg) {
                    $("#ImgPreviewbannerwidd").attr('src', displayimg.target.result);
                }
                uploadimg.readAsDataURL(input.files[0]);
            }
        }
    </script>
