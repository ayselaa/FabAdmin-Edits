
@model List<Fab.Models.ProductFolder.Product>
<style>


    .delete-ent-button {
        border: none;
    }

        .delete-ent-button i {
            color: red;
            font-size: 1.5rem;
        }

    .flex-entm {
        display: flex;
        justify-content: space-between;
        padding: 1rem;
        border: 3px solid #DEDEDE;
    }

    .name-entm {
        border: none;
        box-shadow: none;
        color: #787070;
        font-size: 17px;
        font-weight: 500;
    }

</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="page-content" style="  margin-top :10px;  padding-left: 50px;">
    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0 text-change-size">
                Product
            </h4>
            @*<p class="time-calendar">@formattedDate</p>*@
        </div>


        <div class="flex-sellect-addnew">
            <button class="addEnter">
                <a asp-action="create" asp-controller="Product">
                    Add new
                </a>
            </button>
        </div>

    </div>
    @if (Model.Count > 0)
    {
        @foreach (var item in Model.Where(m => m.IsDeleted == false))
        {
            foreach (var translate in item.Translates.Where(x => x.LangCode == "en"))
            {

                <div style="padding-bottom: 10px;">
                    <div class="flex-entm" style="border-radius:9px;">
                        <a class="name-entm">
                            @translate.Name
                        </a>
                        <div>
                            <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" style="text-align:right; text-decoration:none; margin-right:20px">
                                <button type="submit" class="btn-delete delete-ent-button" style="background-color:#F9FAFB;">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </a>
                            <a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">
                                <button type="submit" class="btn-delete delete-ent-button" style="background-color:#F9FAFB;">
                                    <i class="fa-regular fa-pen-to-square" style="color: #4b9cce;"></i>
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
            }


        }
    }
    else
    {
        <p>No Product available.</p>
    }


</div>